<!-- pages/orders/index.wxml -->
<view class="container">
  <view class="header" wx:if="{{orders.length > 0}}">
    <text class="title">今日订单</text>
    <button class="clear-btn" bindtap="clearOrders">清空订单</button>
  </view>
  
  <view class="empty" wx:else>
    <image src="/images/icons/empty.png" class="empty-image"></image>
    <text class="empty-text">暂无订单</text>
    <text class="empty-hint">快去选择商品吧~</text>
  </view>
  
  <view class="orders-list">
    <view class="order-item" wx:for="{{orders}}" wx:key="id">
      <view class="order-header">
        <view class="order-info">
          <text class="order-username">提交人：{{item.userName}}</text>
          <text class="order-time">{{item.createTime}}</text>
        </view>
      </view>
      
      <view class="order-goods">
        <view class="goods-item" wx:for="{{item.goods}}" wx:for-item="goods" wx:for-index="goodsIndex" wx:key="id">
          <view class="goods-name">{{goods.name}} x {{goods.count}}</view>
          <view class="goods-price">¥{{goods.price * goods.count}}</view>
        </view>
      </view>
      
      <view class="order-footer">
        <view class="total-info">
          <text class="total-label">总计：</text>
          <text class="total-price">¥{{item.totalPrice}}</text>
        </view>
      </view>
    </view>
  </view>
</view>