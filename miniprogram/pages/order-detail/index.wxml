<!-- pages/order-detail/index.wxml -->
<view class="container" wx:if="{{order}}">
  <view class="order-header">
    <view class="order-info">
      <text class="order-username">提交人：{{order.userName}}</text>
      <text class="order-time">{{order.createTime}}</text>
    </view>
  </view>
  
  <view class="order-goods">
    <view class="goods-item" wx:for="{{order.goods}}" wx:for-item="goods" wx:for-index="goodsIndex" wx:key="id">
      <image class="goods-image" src="{{goods.image}}" mode="aspectFill"></image>
      <view class="goods-info">
        <view class="goods-name">{{goods.name}}</view>
        <view class="goods-detail">
          <text class="goods-price">¥{{goods.price}}</text>
          <text class="goods-quantity">x{{goods.count}}</text>
        </view>
      </view>
      <text class="goods-total">¥{{goods.price * goods.count}}</text>
    </view>
  </view>
  
  <view class="order-footer">
    <view class="total-info">
      <text class="total-label">总计：</text>
      <text class="total-price">¥{{order.totalPrice}}</text>
    </view>
  </view>
  
  <view class="action-buttons">
    <button class="btn-back" bindtap="goBack">返回</button>
  </view>
</view>