/* pages/login/index.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
}

.login-box {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 500rpx;
  box-sizing: border-box;
}

.logo {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.logo-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 5rpx solid #07c160;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 50rpx;
}

.form {
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.input:focus {
  border-color: #07c160;
  outline: none;
}

.placeholder {
  color: #ccc;
}

.error-msg {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-bottom: 30rpx;
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 45rpx;
  padding: 0;
  box-shadow: 0 4rpx 15rpx rgba(7, 193, 96, 0.3);
  transition: all 0.2s ease;
  margin-bottom: 30rpx;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

.tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.tips text {
  margin-bottom: 10rpx;
}