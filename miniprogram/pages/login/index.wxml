<!-- pages/login/index.wxml -->
<view class="container">
  <view class="login-box">
    <view class="logo">
      <image src="/images/avatar.png" class="logo-image"></image>
    </view>
    <view class="title">菜单选菜</view>
    
    <view class="form">
      <view class="input-group">
        <text class="label">用户名</text>
        <input 
          class="input" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="inputUsername"
          placeholder-class="placeholder"
        />
      </view>
      
      <view class="input-group">
        <text class="label">密码</text>
        <input 
          class="input" 
          type="password"
          placeholder="请输入密码" 
          value="{{password}}"
          bindinput="inputPassword"
          placeholder-class="placeholder"
        />
      </view>
      
      <text class="error-msg" wx:if="{{errorMsg}}">{{errorMsg}}</text>
      
      <button class="login-btn" bindtap="login">登录</button>
      
    </view>
  </view>
</view>